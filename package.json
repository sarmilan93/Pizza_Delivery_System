{
  "name": "pizza_delivery_system",
  "version": "1.0.0",
  "description": "Pizza Delivery System",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "predev": "npm run swagger",
    "prebuild": "npm run swagger",
    "build": "tsc",
    "dev": "concurrently \"nodemon\" \"nodemon -x tsoa spec\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "swagger": "tsoa spec"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node src/server.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sarmilan93/Pizza_Delivery_System.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sarmilan93/Pizza_Delivery_System/issues"
  },
  "homepage": "https://github.com/sarmilan93/Pizza_Delivery_System#readme",
  "dependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.6.3",
    "express": "^4.18.2",
    "mongoose": "^7.5.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "ts-node": "^10.9.1",
    "tsoa": "^5.1.1",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1"
  }
